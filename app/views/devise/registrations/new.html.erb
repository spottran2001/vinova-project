<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">
      <div class="col-md-8 col-lg-7 col-xl-6">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
          class="img-fluid" alt="Phone image">
      </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
        <h1>Registers</h1>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|%>
          <!-- Email input -->
          <div class="form-outline mb-4">
            <%= f.input :email, label: false, placeholder:"Email Address" %>
          </div>

          <!-- Password input -->
          <div class="form-outline mb-4">
            <%= f.input :password, label: false, placeholder:"Password" %>
          </div>

           <div class="form-outline mb-4">
            <%= f.input :password_confirmation, label: false, placeholder:"Password" %>
          </div>

          <!-- Submit button -->
          <%= f.submit "Resister", class: "btn btn-primary btn-lg btn-block w-100"%>
          <div class="divider d-flex justify-content-center my-4">
            <p class="text-center fw-bold mx-3 mb-0 text-muted">OR</p>
          </div>
          <%= link_to  new_user_session_path, style: "background-color: #3b5998",class:"btn btn-primary btn-lg btn-block w-100", role:"button" do %>
            <i class="fab fa-facebook-f me-2"></i>Sign In
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</section>