<div style="max-height:320px; max-width:320px; display:flex; flex-direction:column"> 
    <div style="display:flex; max-width:100%; max-height:100%">
        <%= image_tag(product_photo.photo.url.to_s, alt: "Image") %>
    </div>
    <div>
        <%= link_to "Destroy", [product_photo.product, product_photo], data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure delete this image?"
                    } %>
    </div>
</div>